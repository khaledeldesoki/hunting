{
  "name": "Bug Bounty Codespace",
  "build": { "dockerfile": "Dockerfile" },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-python.python",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "jeff-hykin.better-python-syntax"
      ]
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "postCreateCommand": "bash /workspace/scripts/install-tools.sh",
  "forwardPorts": [8000, 8080, 9222],
  "remoteUser": "vscode"
}