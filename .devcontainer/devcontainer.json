{
  "name": "Kali Codespace (Pentest)",
  "build": { "dockerfile": "Dockerfile" },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "golang.go",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "postCreateCommand": "bash /workspace/scripts/install-kali-tools.sh",
  "forwardPorts": [8000,8080,9222],
  "remoteUser": "vscode"
}
